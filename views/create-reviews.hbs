<link rel="stylesheet" href="/stylesheets/create-reviews.css" />

<!--The form -->
<div id="container">
  <h1>&bull; Client's review &bull;</h1>
  <div class="underline">
  </div>
  <div class="icon_wrapper">
    <svg class="icon" viewBox="0 0 20 20">
      <path
        d="M17.592,8.936l-6.531-6.534c-0.593-0.631-0.751-0.245-0.751,0.056l0.002,2.999L5.427,9.075H2.491c-0.839,0-0.162,0.901-0.311,0.752l3.683,3.678l-3.081,3.108c-0.17,0.171-0.17,0.449,0,0.62c0.169,0.17,0.448,0.17,0.618,0l3.098-3.093l3.675,3.685c-0.099-0.099,0.773,0.474,0.773-0.296v-2.965l3.601-4.872l2.734-0.005C17.73,9.688,18.326,9.669,17.592,8.936 M3.534,9.904h1.906l4.659,4.66v1.906L3.534,9.904z M10.522,13.717L6.287,9.48l4.325-3.124l3.088,3.124L10.522,13.717z M14.335,8.845l-3.177-3.177V3.762l5.083,5.083H14.335z"
      ></path>
    </svg>
  </div>
  <form class="forms" action="/create-reviews" method="POST" id="contact_form">

    <label for="category"></label>
    <div class="subject">
      <select name="category" id="category" required>
        <option disabled hidden selected>Category</option>
        <option value="life">Life</option>
        <option value="sport">Sport</option>
        <option value="career">Career</option>
        <option value="style">Style</option>
      </select>
    </div>

    <label for="location"></label>
    <div class="subject">
      <select name="location" id="locations" required>
        <option disabled hidden selected>Location</option>
        <option value="Paris">Paris</option>
        <option value="Nantes">Nantes</option>
        <option value="Lyon">Lyon</option>
        <option value="Lyon">Nice</option>
        <option value="Bordeaux">Bordeaux</option>
        <option value="Lille">Lille</option>
        <option value="Marseille">Marseille</option>
      </select>
    </div>

    <div class="message">
      <textarea
        name="text"
        placeholder="I'd like to write a review"
        id="message_input"
        cols="30"
        rows="5"
        required
      ></textarea>
    </div>
    <div class="submit">
      <input type="submit" value="Write a review" id="form_button" />
    </div>
  </form><!-- // End form -->
</div><!-- // End #container -->

<div id="forms">
  <div class="container">
    <ul>
      {{#each reviews}}
        <article class="service-box">
          <p>{{this.location}}, {{this.category}}</p>
          <div class="underline-box">
          </div>
          <p>Coach: {{this.coach.name}}</p>

          <p>" {{this.text}}"</p>

          <p>&bull; {{this.user.email}} &bull;</p>
        </article>
      {{/each}}
    </ul>
  </div>
</div>